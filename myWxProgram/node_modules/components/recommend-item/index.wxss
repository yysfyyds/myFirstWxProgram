/* components/recommend-item/index.wxss */
.view-recommend {
  margin: 20rpx 0;
}

.recommend-header {
  display: flex;
  font-size: 28rpx;
  height: 44rpx;
  justify-content: space-between;
  margin-bottom: 6rpx;
  padding: 0 20rpx;
}

.item-box-left {
  background-color: #40d8b2;
  height: 70%;
  margin-right: 14rpx;
  margin-top: 4rpx;
  width: 4rpx;
}

.recommend-header .recommend-item-right,.recommend-item-left {
  align-items: center;
  display: flex;
}

.recommend-header .recommend-item-right {
  color: #a0a0a0;
  font-size: 24rpx;
  justify-content: center;
}