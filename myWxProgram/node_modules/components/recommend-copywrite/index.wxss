/* components/recommend-copywrite/index.wxss */
.view-recommend {
  padding: 0 20rpx;
}

.recommend-header {
  display: flex;
  font-size: 28rpx;
  height: 44rpx;
  justify-content: space-between;
}

.item-box-left {
  background-color: #7ba0f8;
  height: 70%;
  margin-right: 14rpx;
  margin-top: 4rpx;
  width: 4rpx;
}

.item-box-title {
  color: #7ba0f8;
}

.recommend-header .recommend-item-right,.recommend-item-left {
  align-items: center;
  display: flex;
}

.recommend-header .recommend-item-right {
  color: #a0a0a0;
  font-size: 24rpx;
  justify-content: center;
}

.recommend-content {
  margin: 20rpx 0;
  width: 100%;
}

.recommend-content>.content-box {
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx rgba(123,160,248,.6);
  box-sizing: border-box;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  padding: 10rpx 20rpx;
  width: 100%;
}

.recommend-content>.content-box,.recommend-content>.content-box>.box-head {
  align-items: center;
  display: flex;
}

.recommend-content>.content-box>.box-head {
  flex: 1;
}

.content-box>.box-head>.avatar-image {
  border-radius: 100%;
  height: auto;
  width: 60rpx;
}

.content-box .box-copywrite {
  color: gray;
  flex: 8;
}

.content-box .box-copywrite .copywrite-text {
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: pre-line;
}

.view-loading {
  display: flex;
  justify-content: center;
  padding-bottom: 20rpx;
  width: 100%;
}