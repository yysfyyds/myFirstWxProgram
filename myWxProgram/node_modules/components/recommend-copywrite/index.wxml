<view class="view-recommend">
    <view class="recommend-header">
        <view class="recommend-item-left">
            <view class="item-box-left"></view>
            <view class="item-box-title">最新文案</view>
        </view>
        <view bindtap="clickCopyWriter" class="recommend-item-right"> 更多 > </view>
    </view>
    <view class="recommend-content">
        <view class="content-box" wx:for="{{copyWriteList}}" wx:key="index">
            <view class="box-head">
                <image lazyLoad webp class="avatar-image" mode="widthFix" src="{{cosUrl+item.avatarUrl}}"></image>
            </view>
            <view class="box-copywrite">
                <text class="copywrite-text">{{item.content}}</text>
            </view>
        </view>
    </view>
    <view class="view-loading" wx:if="{{loading}}">
        <van-loading size="24px">小鱼玩命加载文案中...</van-loading>
    </view>
</view>
