/* components/recommenf-picture/index.wxss */
.recommend-header {
  display: flex;
  font-size: 28rpx;
  height: 44rpx;
  justify-content: space-between;
  margin-bottom: 6rpx;
  padding: 0 20rpx;
}

.item-box-left {
  background-color: #40d8b2;
  height: 70%;
  margin-right: 14rpx;
  margin-top: 4rpx;
  width: 4rpx;
}

.recommend-header .recommend-item-right,.recommend-item-left {
  align-items: center;
  display: flex;
}

.recommend-header .recommend-item-right {
  color: #a0a0a0;
  font-size: 24rpx;
  justify-content: center;
}

.recommend-content {
  box-sizing: border-box;
  padding: 0 12rpx;
  width: 100%;
}

.content-item,.recommend-content {
  align-items: flex-start;
  display: flex;
}

.content-item {
  height: 500rpx;
  margin-right: 20rpx;
  padding: 10rpx 0;
}

.content-item:first-child {
  padding-left: 10rpx;
}

.content-item:last-child {
  padding-right: 10rpx;
}

.content-item .item-image {
  border-radius: 20rpx;
  box-shadow: 0 0 10rpx gray;
  height: 100%;
}

.view-loading {
  display: flex;
  justify-content: center;
  padding-bottom: 20rpx;
  width: 100%;
}