<view class="view-recommend">
    <view class="recommend-header">
        <view class="recommend-item-left">
            <view class="item-box-left" style="background-color: {{titleBoxColor}};"></view>
            <view class="item-box-title" style="color: {{titleColor}};">{{title}}</view>
        </view>
        <view bindtap="clickMore" class="recommend-item-right"> 更多 > </view>
    </view>
    <scroll-view enableFlex enablePassive enhanced scrollAnchoring scrollX class="recommend-content" showScrollbar="{{false}}" wx:if="{{!loading}}">
        <view class="content-item" wx:for="{{images}}" wx:key="index">
            <image lazyLoad webp bindtap="clickImage" class="item-image" data-id="{{item.id}}" data-src="{{item.field1}}" mode="heightFix" src="{{item.field1}}" style="box-shadow: 0 0 10rpx {{boxShadowColor}};"></image>
        </view>
    </scroll-view>
    <view class="view-loading" wx:else>
        <van-loading size="24px">{{loadingText}}</van-loading>
    </view>
</view>
